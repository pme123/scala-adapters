<?xml version="1.0" encoding="UTF-8" ?>
<InputAF xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="af_input_new.xsd"
	isConfigurable="true">
	<MovieVars>
		<ValueSet ident="batchinterval" type="number" defaultValue="10000" isHidden="true">
			<ValueEntry language="en" title="Batch Interval" info="Time of one batch" isDefault="true" />
			<ValueEntry language="de" title="Dataset Dauer" info="Dauer einer Seite" />
		</ValueSet>
		<ValueSet ident="itemsperbatch" type="number" defaultValue="1" isReadOnly="true">
			<ValueEntry language="en" title="Items per batch" info="Number of datasets per batch" isDefault="true" />
			<ValueEntry language="de" title="Anzahl Datasets" info="Anzahl Datasets pro Seite" />
		</ValueSet>
		<ValueSet ident="slogan" type="short_text" defaultValue="The Slogan is good">
			<ValueEntry language="en" title="Company's slogan" info="Your company's slogan" isDefault="true" />
			<ValueEntry language="de" title="Firmen-Slogan" info="Ihr Firmen-Slogan" />
		</ValueSet>
		<ValueSet ident="logo" type="image" defaultValue="32144.jpg">
			<ValueEntry language="en" title="Company's logo" info="Choice of the company logo" isDefault="true" />
			<ValueEntry language="de" title="Firmen-Logo" info="Auswahl des Firmenlogos" />
		</ValueSet>
		<ValueSet ident="advertiseVideo" type="video" defaultValue="32144.flv">
			<ValueEntry language="en" title="Advertising video" info="Advertising video as .flv" isDefault="true" />
			<ValueEntry language="de" title="Werbevideo" info="Werbevidio als .flv" />
		</ValueSet>
		<ValueSet ident="hasBackground" type="boolean" defaultValue="true">
			<ValueEntry language="en" title="Background" info="Text description" isDefault="true" />
			<ValueEntry language="de" title="Hintergrund" info="Textbeschreibung" />
		</ValueSet>
		<ValueSet ident="bgColor" type="color" defaultValue="0">
			<ValueEntry language="en" title="Background color" info="Color of the background" isDefault="true" />
			<ValueEntry language="de" title="Hintergrundfarbe" info="Farbe des Hintergrundes" />
		</ValueSet>
		<ValueSet ident="timing" type="timing">
			<ValueEntry language="en" title="Timing" info="Create Timings here" isDefault="true" />
			<ValueEntry language="de" title="Timing" info="Hier Timings eintragen" />
		</ValueSet>
		<ValueSet ident="logoPosition" type="dropdown" defaultValue="0">
			<ValueEntry language="en" title="Logo position" info="please choose" isDefault="true" />
			<ValueEntry language="de" title="Logo Position" info="Wählen Sie aus" />
			<ValueSet ident="0;0" type="short_text">
				<ValueEntry language="en" title="Top-Left" isDefault="true" />
				<ValueEntry language="de" title="Oben-Links" />
			</ValueSet>
			<ValueSet ident="10;10" type="short_text">
				<ValueEntry language="en" title="Top 10-Left 10" isDefault="true" />
				<ValueEntry language="de" title="Oben 10-Links 10" />
			</ValueSet>
			<ValueSet ident="0;20" type="short_text">
				<ValueEntry language="en" title="Top 20-Left" isDefault="true" />
				<ValueEntry language="de" title="Oben 20-Links" />
			</ValueSet>
		</ValueSet>
		<ValueSet ident="displayDate" type="date">
			<ValueEntry language="en" title="Showing date" info="Please choose" isDefault="true" />
			<ValueEntry language="de" title="Anzeige Datum" info="Wählen Sie aus" />
		</ValueSet>
		<ValueSet ident="displayTime" type="time">
			<ValueEntry language="en" title="Showing time" info="Please choose" isDefault="true" />
			<ValueEntry language="de" title="Anzeige Zeit" info="Wählen Sie aus" />
		</ValueSet>
        <ValueSet ident="promoAF" type="animation_factory">
            <ValueEntry language="en" title="Linked AF" info="Example of a linked AF" isDefault="true"/>
            <ValueEntry language="de" title="Verlinkte Animation" info="Beispiel einer verlinkten Animation"/>
        </ValueSet>
	</MovieVars>
	<DataSets>
		<ValueSet ident="manufacturer" type="short_text" defaultValue="Hallo Welt">
			<ValueEntry language="en" title="Manufacturere" info="The name of the manufacturer" isDefault="true" />
			<ValueEntry language="de" title="Hersteller" info="Der Name des Herstellers" />
		</ValueSet>
		<ValueSet ident="articleTitle" type="short_text">
			<ValueEntry language="en" title="Title" info="The name of the article" isDefault="true" />
			<ValueEntry language="de" title="Bezeichnung" info="Bezeichnung des Artikels" />
		</ValueSet>
		<ValueSet ident="articleDescr" type="long_text" defaultValue="Hallo Welt2">
			<ValueEntry language="en" title="Description" info="Description of the Article" isDefault="true" />
			<ValueEntry language="de" title="Beschreibung" info="Beschreibung des Article Factorys" />
		</ValueSet>
		<ValueSet ident="textColor" type="color" defaultValue="C1BBAF">
			<ValueEntry language="en" title="Text color" info="Color of the description" isDefault="true" />
			<ValueEntry language="de" title="Text Farbe" info="Farbe der Bezeichnung" />
		</ValueSet>
		<ValueSet ident="articleImg" type="image" defaultValue="32144.jpg">
			<ValueEntry language="en" title="Article's image" info="Choice of the article's image" isDefault="true" />
			<ValueEntry language="de" title="Artikel Abbildung" info="Auswahl des Artikel-Bildes" />
		</ValueSet>
		<ValueSet ident="advertiseVideo" type="video" defaultValue="32144.flv">
			<ValueEntry language="en" title="Advertising video" info="Advertising video as .flv" isDefault="true" />
			<ValueEntry language="de" title="advertiseVideo" info="Werbevidio als .flv" />
		</ValueSet>
		<ValueSet ident="snowEffect" type="boolean" defaultValue="true"  isHidden="true">
			<ValueEntry language="en" title="Snow effect" info="Activate snow effect" isDefault="true" />
			<ValueEntry language="de" title="Schneeeffekt" info="Schneeeffekt aktivieren" />
		</ValueSet>
		<ValueSet ident="nrSnowflakes" type="number" defaultValue="1"  isReadOnly="true">
			<ValueEntry language="en" title="Snowflakes" info="Number of snowflakes" isDefault="true" />
			<ValueEntry language="de" title="Schneeflocken" info="Anzahl der Schneeflocken" />
		</ValueSet>
		<ValueSet ident="timing" type="timing">
			<ValueEntry language="en" title="Timing" info="Create Timings here" isDefault="true" />
			<ValueEntry language="de" title="Timing" info="Hier Timings eintragen" />
		</ValueSet>
		<ValueSet ident="imageScale" type="dropdown" defaultValue="100">
			<ValueEntry language="en" title="Image scaling" info="please choose" isDefault="true" />
			<ValueEntry language="de" title="Bildskalierung" info="Wählen Sie aus" />
			<ValueSet ident="20" type="short_text">
				<ValueEntry language="en" title="20 %" isDefault="true" />
			</ValueSet>
			<ValueSet ident="40" type="short_text">
				<ValueEntry language="en" title="40 %" isDefault="true" />
			</ValueSet>
			<ValueSet ident="60" type="short_text">
				<ValueEntry language="en" title="60 %" isDefault="true" />
			</ValueSet>
			<ValueSet ident="80" type="short_text">
				<ValueEntry language="en" title="80 %" isDefault="true" />
			</ValueSet>
			<ValueSet ident="100" type="short_text">
				<ValueEntry language="en" title="100 %" isDefault="true" />
			</ValueSet>
		</ValueSet>
		<ValueSet ident="showDate" type="date">
			<ValueEntry language="en" title="Showing date" info="Please choose" isDefault="true" />
			<ValueEntry language="de" title="Anzeige Datum" info="Wählen Sie aus" />
		</ValueSet>
		<ValueSet ident="showTime" type="time">
			<ValueEntry language="en" title="Showing time" info="Please choose" isDefault="true" />
			<ValueEntry language="de" title="Anzeige Zeit" info="Wählen Sie aus" />
		</ValueSet>
	</DataSets>
</InputAF>
